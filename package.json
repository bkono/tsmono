    "pub": "lerna publish"
  },
  "devDependencies": {
    "eslint": "^7.20.0",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lerna-to-lambda": "^0.3.1",
    "typescript": "^4.1.5"
  }
}
